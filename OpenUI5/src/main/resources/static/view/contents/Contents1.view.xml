<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:t="sap.ui.table"
	xmlns:l="sap.ui.layout"
    controllerName="OpenUI5.controller.contents.Contents1">

	<l:HorizontalLayout>
		<l:content>
		    <VBox>
			    <Image width="200px" src="/images/OpenUI5_Logo.png"/>
			    <l:HorizontalLayout>
				    <Text text="{i18n>contents1Title}"/>
			    </l:HorizontalLayout>
			
			    <t:Table id="idTable"
                         selectionMode="None"
                         rows="{/}"
                         visibleRowCount="auto"
                         width="800px">
                    <t:columns>
                        <t:Column resizable="true" hAlign="Center" width="300px"><Label text="Id"         /><t:template><Text text="{id}"></Text></t:template></t:Column>
                        <t:Column resizable="true" hAlign="Center"              ><Label text="Maker"      /><t:template><Text text="{maker}"></Text></t:template></t:Column>
                        <t:Column resizable="true" hAlign="Center"              ><Label text="Model"      /><t:template><Text text="{model}"></Text></t:template></t:Column>
                        <t:Column resizable="true" hAlign="Center"              ><Label text="Description"/><t:template><Text text="{description}"></Text></t:template></t:Column>
                    </t:columns>
                </t:Table>
            </VBox>
		</l:content>
	</l:HorizontalLayout>
	
</mvc:View>